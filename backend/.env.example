# Database Configuration
DATABASE_URL="mongodb+srv://username:password@your-cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp"

# AI API Configuration (Choose one)
# Option 1: OpenAI (requires $5 free credits, no credit card initially)
# OPENAI_API_KEY="your_openai_api_key_here"

# Option 2: Google Gemini (completely free, no credit card)
# GEMINI_API_KEY="your_gemini_api_key_here"

# Option 3: Hugging Face (completely free, no credit card)
# HUGGINGFACE_API_KEY="your_huggingface_api_key_here"

# AI Provider Configuration
# Use "huggingface" for free tier (no API key needed for public models)
# Use "openai" if you have OpenAI API key
# Use "gemini" if you have valid Gemini API key
AI_PROVIDER="huggingface"

# OpenAI API Key (if using OpenAI)
# OPENAI_API_KEY="your_openai_api_key_here"

# Gemini API Key (if using Gemini)
# GEMINI_API_KEY="your_gemini_api_key_here"

# Hugging Face API Key (optional, for rate limiting)
# HUGGINGFACE_API_KEY="your_huggingface_api_key_here"

# Pyth Network
PYTH_NETWORK_URL="https://hermes.pyth.network"
PYTH_PRICE_SERVICE_URL="https://hermes.pyth.network"

#    API
BLOCKSCOUT_API_URL="https://eth.blockscout.com/api"
BLOCKSCOUT_API_KEY="your_blockscout_api_key"

# Lit Protocol
LIT_NETWORK="cayenne"
LIT_CHAIN="ethereum"

# Envio API
ENVIO_API_URL="https://api.envio.dev"
ENVIO_API_KEY="your_envio_api_key"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Server Configuration
PORT=3001
NODE_ENV="development"
JWT_SECRET="your_jwt_secret_min_32_characters_long"
SESSION_SECRET="your_session_secret_min_32_characters"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Blockchain RPC URLs
ETHEREUM_RPC_URL="https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"
POLYGON_RPC_URL="https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"
ARBITRUM_RPC_URL="https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"
SEPOLIA_RPC_URL="https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"

# Wallet Connect
WALLETCONNECT_PROJECT_ID="your_walletconnect_project_id"

# API Keys for external services
COINGECKO_API_KEY="your_coingecko_api_key"
ETHERSCAN_API_KEY="your_etherscan_api_key"
POLYGONSCAN_API_KEY="your_polygonscan_api_key"
ARBISCAN_API_KEY="your_arbiscan_api_key"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/chainmind.log"

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Features
ENABLE_WEBSOCKET=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_HELMET=true
