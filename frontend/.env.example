# ============================================
# ChainMind Frontend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git!

# ============================================
# API Configuration (REQUIRED)
# ============================================
# Backend API base URL with /api suffix
VITE_API_URL=http://localhost:3001/api

# WebSocket server URL (without /api)
VITE_SOCKET_URL=http://localhost:3001

# ============================================
# Wallet Configuration (REQUIRED)
# ============================================
# WalletConnect Project ID
# Get from: https://cloud.walletconnect.com/
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Alchemy API Key
# Get from: https://dashboard.alchemy.com/
VITE_ALCHEMY_API_KEY=your_alchemy_api_key

# ============================================
# Chain RPC URLs (OPTIONAL - Uses Alchemy by default)
# ============================================
# If you want to use custom RPC endpoints, uncomment and configure:
# VITE_ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
# VITE_POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY
# VITE_ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY

# ============================================
# Feature Flags (OPTIONAL)
# ============================================
# Enable/disable specific features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PORTFOLIO=true
VITE_ENABLE_DEFI=true
VITE_ENABLE_SECURITY=true
VITE_ENABLE_NFT_DISPLAY=true

# ============================================
# Development Configuration (OPTIONAL)
# ============================================
# Show debug logs in console (development only)
VITE_DEBUG=false

# Enable React DevTools
VITE_ENABLE_DEVTOOLS=true

# Source maps for debugging
GENERATE_SOURCEMAP=true

# ============================================
# Production Configuration (OPTIONAL)
# ============================================
# For production deployment, update these:
VITE_API_URL=http://localhost:3001/api
VITE_SOCKET_URL=http://localhost:3001
# VITE_DEBUG=false
# GENERATE_SOURCEMAP=false
