# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Atlas connection string
# Get from: https://cloud.mongodb.com/
DATABASE_URL="mongodb+srv://username:password@your-cluster.mongodb.net/chainmind?retryWrites=true&w=majority"

# ============================================
# AI PROVIDER CONFIGURATION
# ============================================
# Choose one: "openai", "gemini", or "huggingface"
AI_PROVIDER="gemini"

# OpenAI API Key (if using OpenAI)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2000

# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_MODEL="gemini-1.5-flash-latest"

# Hugging Face API Key (optional, for rate limiting)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY="hf_your_huggingface_token"

# ============================================
# SPONSOR INTEGRATIONS
# ============================================

# Pyth Network - Real-time Price Feeds
# Docs: https://docs.pyth.network/
PYTH_NETWORK_URL="https://hermes.pyth.network"
PYTH_PRICE_SERVICE_URL="https://hermes.pyth.network"
PYTH_CLUSTER="pythnet"
PYTH_UPDATE_INTERVAL=5000

# Blockscout API - Smart Contract Analysis
# Get API key from: https://blockscout.com
BLOCKSCOUT_API_URL="https://eth.blockscout.com/api"
BLOCKSCOUT_API_KEY="your_blockscout_api_key_here"
BLOCKSCOUT_POLYGON_URL="https://polygon.blockscout.com/api"
BLOCKSCOUT_ARBITRUM_URL="https://arbitrum.blockscout.com/api"

# Lit Protocol - Decentralized Key Management
# Docs: https://developer.litprotocol.com/
LIT_NETWORK="cayenne"
LIT_CHAIN="ethereum"
LIT_DEBUG=false
LIT_MIN_NODE_COUNT=6

# Envio Indexer - Multi-chain Transaction Data
# Get API key from: https://envio.dev
ENVIO_API_URL="https://api.envio.dev"
ENVIO_API_KEY="your_envio_api_key_here"

# ============================================
# CACHING & SESSION STORAGE
# ============================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
NODE_ENV="development"

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT Secret - Must be at least 32 characters
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET="your-secure-jwt-secret-min-32-chars-generate-new-one"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-token-secret-min-32-characters-long"
JWT_REFRESH_EXPIRES_IN="30d"

# Session Secret
SESSION_SECRET="your-secure-session-secret-min-32-chars-generate-new-one"
SESSION_MAX_AGE=604800000

# Password Hashing
BCRYPT_ROUNDS=12

# Login Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
LOCKOUT_DURATION=15

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# ============================================
# RATE LIMITING
# ============================================
# Global rate limit: 100 requests per 15 minutes
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API-specific limits
RATE_LIMIT_API_WINDOW=60000
RATE_LIMIT_API_MAX=60

# Auth endpoint limits
RATE_LIMIT_AUTH_WINDOW=900000
RATE_LIMIT_AUTH_MAX=5

# WebSocket connection limits
RATE_LIMIT_WS_CONNECTIONS=10

# ============================================
# BLOCKCHAIN RPC ENDPOINTS
# ============================================
# Alchemy API
# Get API key from: https://www.alchemy.com/
ETHEREUM_RPC_URL="https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"
POLYGON_RPC_URL="https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"
ARBITRUM_RPC_URL="https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"
SEPOLIA_RPC_URL="https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"

# Alternative: Free Public RPCs (slower, less reliable)
# ETHEREUM_RPC_URL="https://eth.llamarpc.com"
# POLYGON_RPC_URL="https://polygon-rpc.com"
# ARBITRUM_RPC_URL="https://arb1.arbitrum.io/rpc"
# SEPOLIA_RPC_URL="https://rpc.sepolia.org"

# ============================================
# WEB3 SERVICES
# ============================================
# WalletConnect Project ID
# Get from: https://cloud.walletconnect.com/
WALLETCONNECT_PROJECT_ID="your_walletconnect_project_id"

# Block Explorers API Keys
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY="your_etherscan_api_key"
POLYGONSCAN_API_KEY="your_polygonscan_api_key"
ARBISCAN_API_KEY="your_arbiscan_api_key"

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL="info"
LOG_FILE="logs/chainmind.log"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES=5
LOG_COMPRESS=true
LOG_TO_CONSOLE=true

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_WEBSOCKET=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
ENABLE_MORGAN=true

# Development Features
ENABLE_DEBUG_MODE=false
ENABLE_SWAGGER_DOCS=true
ENABLE_GRAPHQL_PLAYGROUND=false

# ============================================
# PERFORMANCE & OPTIMIZATION
# ============================================
MAX_REQUEST_SIZE="10mb"
MAX_FILE_UPLOAD_SIZE="50mb"
DB_CONNECTION_POOL_SIZE=10
DB_TIMEOUT=30000

# Cache TTL (seconds)
CACHE_TOKEN_PRICES_TTL=60
CACHE_PORTFOLIO_TTL=300
CACHE_MARKET_DATA_TTL=120
CACHE_SECURITY_ANALYSIS_TTL=3600

# ============================================
# EXTERNAL API TIMEOUTS
# ============================================
API_TIMEOUT=30000
BLOCKCHAIN_TIMEOUT=60000
AI_TIMEOUT=90000
