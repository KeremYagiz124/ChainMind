# ChainMind Production Environment Configuration

# Database Configuration (MongoDB)
DATABASE_URL="mongodb+srv://username:password@your-cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Backend API Configuration
# AI Provider Selection: huggingface | openai | gemini
AI_PROVIDER=huggingface
# OPENAI_API_KEY=your_openai_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here
# Optional (for higher rate limits on HF public models)
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

PYTH_NETWORK_URL=https://hermes.pyth.network
PYTH_PRICE_SERVICE_URL=https://hermes.pyth.network

BLOCKSCOUT_API_URL=https://eth.blockscout.com/api
BLOCKSCOUT_API_KEY=your_blockscout_api_key

ENVIO_API_URL=https://api.envio.dev
ENVIO_API_KEY=your_envio_api_key

JWT_SECRET=your_jwt_secret_min_32_characters_long
SESSION_SECRET=your_session_secret_min_32_characters
LIT_NETWORK=cayenne
LIT_CHAIN=ethereum

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Scanner API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_SOCKET_URL=http://localhost:3001
REACT_APP_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
REACT_APP_ALCHEMY_ID=your_alchemy_api_key

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Domain Configuration
DOMAIN=chainmind.ai
API_DOMAIN=api.chainmind.ai
